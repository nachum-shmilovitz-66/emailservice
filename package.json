{
    "name": "mailservice",
    "version": "1.0.0",
    "description": "Mail MS",
    "main": "./src/server.ts",
    "scripts": {
        "debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-tsc\" \"npm run watch-node\"",
        "start": "npm run serve",
        "serve": "node dist/server.js",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "build": "tsc",
        "tsc": "tsc",
        "watch-tsc": "tsc -w",
        "prettier": "prettier --list-different './src/**/*.ts'",
        "clean": "rm -rf node_modules/ dist/ package-lock.json",
        "rebuild": "npm run clean && npm i && npm run build && npm run test",
        "test": "jest --coverage  --forceExit",
        "lint": "tslint -c tslint.json -p tsconfig.json"
    },
    "author": "Attenti",
    "license": "Apache-2.0",
    "dependencies": {
        "@attenti/aware-common": "^17.0.46",
        "@attenti/common": "^2.3.9",
        "@attenti/di-utils": "^1.0.11",
        "@attenti/genericdal": "^2.0.10",
        "class-validator": "^0.12.2",
        "cors": "^2.8.5",
        "dotenv": "^4.0.0",
        "jest-junit": "^12.0.0",
        "mongoose": "^5.11.11",
        "nodemailer": "^6.6.1",
        "tsyringe": "^4.4.0"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/node": "^10.11.4",
        "@types/nodemailer": "^6.4.2",
        "@types/supertest": "^2.0.6",
        "automapper-ts": "^1.9.0",
        "concurrently": "^4.0.1",
        "husky": "^1.1.1",
        "jest": "^26.6.1",
        "jest-sonar-reporter": "^2.0.0",
        "lint-staged": "^7.3.0",
        "moment-timezone": "^0.5.32",
        "nodemon": "^1.18.0",
        "prettier": "^1.14.0",
        "rimraf": "^2.7.1",
        "routing-controllers": "0.9.0-alpha.6",
        "routing-controllers-openapi": "^2.2.0",
        "supertest": "^3.3.0",
        "ts-jest": "^26.4.3",
        "tslint": "^5.20.1",
        "tslint-config-airbnb": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "typescript": "^3.7.4"
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": ".",
        "outputName": "./build/reports/junit.xml",
        "classNameTemplate": "{classname}-{title}",
        "titleTemplate": "{classname}-{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}
